<%- include('../partials/header'); -%>

<div class="container">
     <header class="h-100 p-5 bg-body-tertiary border rounded-3 text-center" style="margin: 20px 0">
           <div class="container">
                <h1>Welcome To YelpCamp!</h1>
                <p>View All Campgrounds From All-over The World</p>
                <p>
                      <a class="btn btn-primary btn-large" href= "/campgrounds/new">Add New Campgrounds</a>
                </p>
           </div>
     </header>
     
     <div class="row text-center" style="display:flex; flex-wrap: wrap;">
         <% campgrounds.forEach(function(campground){ %>
             <div class="col-md-3 col-sm-6">
                 <div class="thumbnail">
                     <img src="<%= campground.img %>" class="img-thumbnail">
                         <div class="caption">
                            <h4><%= campground.name %></h4>
                         </div>
                         <p>
                            <a href="/campgrounds/<%= campground._id %>" class="btn btn-primary">More Info</a>
                         </p>
                 </div>
             </div>
         <% }); %>
     </div>
</div>
<%- include('../partials/footer'); -%>
